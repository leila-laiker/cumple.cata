  <script>
    // Cuenta regresiva
    const countdownElement = document.getElementById('countdown');
    const eventDate = new Date("May 6, 2025 16:00:00").getTime();

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = eventDate - now;

      if (distance <= 0) {
        countdownElement.innerHTML = "üéä ¬°Ya empez√≥ la fiesta! üéà";
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      countdownElement.innerHTML = `
        <span>üóìÔ∏è ${days} d√≠as</span>
        <span>‚è∞ ${hours} hrs</span>
        <span>üïí ${minutes} min</span>
        <span>‚è≥ ${seconds} seg</span>
      `;
    }

    setInterval(updateCountdown, 1000);
    updateCountdown(); // Inicializa

    // Carrusel
    let index = 0;
    function moverCarrusel(direccion) {
      const carrusel = document.getElementById('carrusel');
      const total = carrusel.children.length;

      index += direccion;
      if (index < 0) index = total - 1;
      if (index >= total) index = 0;

      carrusel.style.transform = `translateX(-${index * 270}px)`;
    }
  </script>
